# Використовуємо базовий образ Python
FROM python:3.8

# Встановлюємо залежності проєкту
COPY requirements.txt /app/requirements.txt
WORKDIR /app
RUN pip install -r requirements.txt

# Копіюємо весь проєкт у контейнер
COPY . /app

# Вказуємо порт, на якому працює додаток
EXPOSE 4200

# Запускаємо додаток
CMD ["python", "app.py"]

docker build -t flask-app .

docker run -p 4200:4200 flask-app

version: '3'

services:
  flask-app:
    build:
      context: .
      dockerfile: Dockerfile
    ports:
      - "5000:5000"  # Порт, на якому працює Flask додаток

  nginx:
    image: nginx:latest
    ports:
      - "80:80"  # Порт, на якому працює Nginx
    volumes:
      - ./nginx.conf:/etc/nginx/conf.d/default.conf:ro  # Підключаємо налаштування Nginx

  postgres:
    image: postgres:latest
    environment:
      POSTGRES_DB: mydb
      POSTGRES_USER: myuser
      POSTGRES_PASSWORD: mypassword

docker-compose up
