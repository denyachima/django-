from django_filters import rest_framework as filters
from .models import Model1, Model2, Model3

class Model1Filter(filters.FilterSet):
    # Визначте поля, за якими буде здійснюватися фільтрація

class Model2Filter(filters.FilterSet):
    # Визначте поля, за якими буде здійснюватися фільтрація

class Model3Filter(filters.FilterSet):
    # Визначте поля, за якими буде здійснюватися фільтрація

class Model1ViewSet(viewsets.ModelViewSet):
    queryset = Model1.objects.all()
